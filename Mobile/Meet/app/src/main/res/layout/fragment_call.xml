<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CallFragment">

    <RelativeLayout
        android:id="@+id/layout_btn_history_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/btn_history_call_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1DA1F2"
            android:textColor="@color/white"
            android:text="All"/>
        <Button
            android:id="@+id/btn_history_call_missed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F1E9E9"
            android:textColor="#1DA1F2"
            android:layout_toRightOf="@id/btn_history_call_all"
            android:text="Missed"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_history_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp">
        <RelativeLayout
            android:id="@+id/layout_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
       <TextView
           android:id="@+id/name_user"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Tom"
           android:textSize="18dp"
           android:layout_marginRight="200dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_user"
            android:textSize="18dp"
            android:text="1/21/15"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/name_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July"
                android:textSize="18dp"
                android:layout_marginRight="200dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_user1"
                android:textSize="18dp"
                android:text="1/22/15"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>