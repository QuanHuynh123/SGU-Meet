<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="#1E88E5"
        android:background="@drawable/edit_text_rounded_corner"
        android:padding="8dp"
        android:layout_marginEnd="80dp">
        
        <TextView
            android:id="@+id/left_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Æ°qfwqfqwfwfq"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF00C8"
        android:background="@drawable/edit_text_rounded_corner"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp">

        <TextView
            android:id="@+id/right_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lo ccccccccccc"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </LinearLayout>
</RelativeLayout>